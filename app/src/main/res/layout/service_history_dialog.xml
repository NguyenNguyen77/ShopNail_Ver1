<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:background="#fff"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_date_select"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Day../Month../Year" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9c9a9a" />

    <ListView
        android:id="@+id/lv_customer_service_history"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:visibility="visible"></ListView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9c9a9a" />

    <TextView
        android:id="@+id/tv_total_price"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Total Price:150$"
        android:visibility="gone" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9c9a9a" />


    <Button
        android:id="@+id/btnClose"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:background="@drawable/button_nail"
        android:gravity="center"
        android:text="@string/close_lb"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:textSize="12dp"></Button>

</LinearLayout>