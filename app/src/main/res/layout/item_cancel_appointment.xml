<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="#227b12"
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019-01-30"
            android:textStyle="italic" />

        <com.example.admin.shopnail.CustomViewListExpand.NonScrollListView
            android:id="@+id/list_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></com.example.admin.shopnail.CustomViewListExpand.NonScrollListView>


    </LinearLayout>


</RelativeLayout>